[user]
        name = Josh Kuhn
        email = josh@rethinkdb.com
[color]
        ui = auto
[alias]
        lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
        reboot = "!f() { \
            set -e; \
            supervisorctl -c ~/supervisord.conf restart 'rethinkdb:*'; \
          }; f"
        stop = "!f() { \
            set -e; \
            supervisorctl -c ~/supervisord.conf stop 'rethinkdb:*'; \
          }; f"
        recent = "!f() { \
          git for-each-ref \
              --sort=-committerdate \
              "refs/heads/josh" \
              --count 5 \
              --no-merged next \
              --format='%(HEAD) %(color:yellow)%(refname:short) %(color:bold red)%(objectname:short) %(color:bold green)(%(committerdate:relative)) %(color:reset) %(contents:subject)'; \
          }; f"

[core]
        editor = emacsclient -nw
        autocrlf = false
[push]
        default = simple
[diff]
        algorithm = patience
[pager]
    log  = /usr/share/git/diff-highlight/diff-highlight | less
    show = /usr/share/git/diff-highlight/diff-highlight | less
    diff = /usr/share/git/diff-highlight/diff-highlight | less
[github]
        user = deontologician
[merge]
        conflictstyle = diff3
[rerere]
        enabled = true
